            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/sepSum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/octSum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/novSum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/decSum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>